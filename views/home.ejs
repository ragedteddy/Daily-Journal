<%- include('partials/header'); -%>

<h1> Home </h1>
<p> <%= startingContent %> </p>
<% for (let i = 0; i < postItems.length; i++) { %>
    <div class="container">
    <h2> <%= postItems[i].title %> </h2>
    <% if( postItems[i].body.length > 100 ){ %>
        <p> <%= postItems[i].body.slice(0, 100) + " ..." %> <a href="/post/<%= postItems[i].index %>"> Read More </a></p>
    <% }else{ %>
        <p> <%= postItems[i].body %> </p>
    <% } %>
    </div>
<% } %>
<br><br><br>

